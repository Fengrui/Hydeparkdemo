<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="1" >

    <TableRow>

        <TextView
            android:gravity="right"
            android:padding="3dip"
            android:text="@string/device_info_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip" />
    </TableRow>

    <TableRow>

        <TextView
            android:gravity="right"
            android:padding="3dip"
            android:text="@string/device_info_mac"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_info_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip" />
    </TableRow>

    <TableRow>

        <TextView
            android:gravity="right"
            android:padding="3dip"
            android:text="@string/device_info_rssi"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_info_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="3dip"
            android:text="@string/device_info_message"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_info_message"
            android:padding="3dip" />
    </TableRow>

</TableLayout>